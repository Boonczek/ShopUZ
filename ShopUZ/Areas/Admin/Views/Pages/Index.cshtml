@model IEnumerable<ShopUZ.Models.ViewModels.Pages.PageVM>

@{
    ViewBag.Title = "Strony";
}

<h2>Strony</h2>

<p>
    @Html.ActionLink("Dodaj nową stronę", "Create")
</p>

@if (!Model.Any())
{
    <h1 class="text-center">Nie ma żadnej strony!</h1>
}

else
{
    <table class="table">
        <tr>
            <th>
                Tytuł strony
            </th>
            <th>
                Adres strony
            </th>

            <th>
                Pasek boczny
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.HasSidebar)
                </td>
                <td>
                    @Html.ActionLink("Edycja", "EditPage", new { id = item.Id }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                    @if (item.Slug != "home")
                    {
                        @Html.ActionLink("Usuń", "Delete", new { id = item.Id }, new { @class = "delete" })
                    }

                </td>
            </tr>
        }

    </table>
}

@section scripts{

    <script src="http://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>

    <script>
        /*
        * Potwierdzasz usuniecię strony
        */
        $(function () {
            $("a.delete").click(function () {
                if (!confirm("Potwierdzasz usuniecię strony")) return false;
            });
        });
    </script>
    }